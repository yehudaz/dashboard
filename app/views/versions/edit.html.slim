.alert.alert-success#success
  button.close data-dismiss="alert" type="button" x
  strong Success!
  |  Version was successfully saved.
.alert.alert-error#error
  button.close data-dismiss="alert" type="button" x
  strong Failure!
  |  Version was not successfully saved.
.span12
  h1
    center Version #{@version.name} - #{@version.description}
  .container
    .row
      .span4
        h2 title="insight raised from code review" Code Review Insights
        div.scroll-wrapper
          table.table.table-condensed#insights
            - for insight in @insights
              tr class="success"
                td
                  i class="icon-thumbs-up"
                td= insight
                td
                  button.btn.btn-link onclick="removeInsightFromInsights(this)" title="remove code review insight" type="button" Remove
        .submit_box
          input#AddInsight name="user" placeholder="Code Review Insight" type="text" value=""
          button.btn.btn-success onclick="addInsightToInsightsList()" title="add another code review insight" Add
      .span4
        #myCarousel.carousel.slide
          /! Carousel items
          .carousel-inner
            .active.item
              img src="http://www.hqwps.com/wp-content/uploads/bodypaint_elephant_2-800x600-590x400.jpg"
            .item
              img src="http://www.hqwps.com/wp-content/uploads/2012/10/bodypaint_swan-800x600-590x400.jpg"
            .item
              img src="http://www.hqwps.com/wp-content/uploads/bodypaint_tiger-800x600-590x400.jpg"
          /! Carousel nav
          a.left.carousel-control data-slide="prev" href="#myCarousel" &lsaquo;
          a.right.carousel-control data-slide="next" href="#myCarousel" &rsaquo;
      .span4
        h2 title="patches deployed for urgent hot fixes" Patched Deployed
        div.scroll-wrapper
          table.table.table-condensed#patches
            - for patch in @patches
              tr class="success"
                td
                  i class="icon-thumbs-up"
                td= patch
                td
                  button.btn.btn-link onclick="removePatchFromPatches(this)" title="remove patch deployed" type="button" Remove
        .submit_box
          input#AddPatch name="user" placeholder="Patch Deployed" type="text" value=""
          button.btn.btn-success onclick="addPatchToPatchedList()" title="add another patch deployed" type="button" Add
    .row
      .span1
      .span3
        .hero-unit
          h1 #{@version.tests_coverage}
          p Tests Coverage
      .span4
        .hero-unit
          h1 #{@version.passed_tests}
          p Passed Tests
      .span3
        .hero-unit
          h1 #{@version.rbp_open_issues}
          p RBP Open Issues
      .span1
      .span12
        .page-header
          h1 title="the last GIT hash committed"
            | GIT Hash
            small  #{@version.git_hash}
    .row
      .span12
        img.img-rounded title="version status" src="http://t2.gstatic.com/images?q=tbn:ANd9GcTbpCPSWWinnzQqRJwu6yn1tzAIgrMn0On140Dzc9nAmPLcoxFF""
    button.btn.btn onClick="updateVersion(#{@version.id})" title="save changes to version" type="button" Save